Cursor FOR LOOP â€“ show you how to use the cursor FOR LOOP statement to fetch and process each row from a cursor.

set serveroutput on;
declare
eno emp.empno%type :='&eno';
name emp.ename%type :='&ename';
salary emp.sal%type;
cursor emprec is select empno,ename,sal from emp where deptno=10;
begin
open emprec;
loop
fetch emprec into eno,name,salary;
exit when emprec%NOTFOUND;
dbms_output.put_line(eno||'   '||name||'  '||salary);
end loop;
close emprec;
end;

---- Example-1

set serveroutput on;
declare
cursor emp_cur is select empno,ename from emp where deptno=30;
eno emp.empno%type;
en emp.ename%type;
begin
open emp_cur;
loop
    fetch emp_cur into eno,en;
    exit when emp_cur%notfound;
    dbms_output.put_line(eno||' '||en);
end loop;
close emp_cur;
end;


---- Example-2

set serveroutput on;
declare
cursor emp_cur(dno number) is select empno,ename,jobn from emp where deptno=dno;
eno emp.empno%type;
en emp.ename%type;
ejob emp.jobn%type;
begin
open emp_cur(10);
loop
fetch emp_cur into eno,en,ejob;
exit when emp_cur%notfound;
dbms_output.put_line(eno||' '||en||' '||ejob);
end loop;
close emp_cur;
open emp_cur(20);
loop
fetch emp_cur into eno,en,ejob;
exit when emp_cur%notfound;
dbms_output.put_line(eno||' '||en||' '||ejob);
end loop;
close emp_cur;
open emp_cur(30);
loop
fetch emp_cur into eno,en,ejob;
exit when emp_cur%notfound;
dbms_output.put_line(eno||' '||en||' '||ejob);
end loop;
close emp_cur;
end;
